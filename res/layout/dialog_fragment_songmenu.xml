<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SongMenuChoices"
    style="@style/CompatListView"
    android:layout_width="@dimen/dialog_width"
    android:minWidth="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">   
    <RelativeLayout android:id="@+id/DialogHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_minimum"
        android:background="@drawable/actionbar_background">
        
	    <TextView android:id="@+id/DialogHeaderTitle"
	        
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/touch_target_minimum"
	        android:textColor="@color/textColorPrimaryDark"
	        android:textSize="@dimen/text_xlarge"
	        android:gravity="center"
	        android:text="@string/dialog_title_song_options"
		/>
	    
		<ImageButton android:id="@+id/DialogCloseButton"
	        
	        android:layout_width="@dimen/touch_target_minimum"
	        android:layout_height="@dimen/touch_target_minimum"
	        android:src="@drawable/abc_ic_clear"
	        android:background="@drawable/button_background_dark"
			android:layout_alignParentLeft="true"
		/>
        
    </RelativeLayout>
	<ImageView
        
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/actionbar_shadow"
        
	/>
    
    <Button
    	android:id="@+id/SongMenuAddTo"
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_item_height"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/text_xlarge"
		android:paddingLeft="@dimen/list_item_horizontal_spacing"
		android:textColor="@color/textColorPrimary"
		android:text="Add to..."
		android:background="@drawable/list_item_background"
	/>
    
    <Button
    	android:id="@+id/SongMenuArtist"
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_item_height"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/text_xlarge"
		android:paddingLeft="@dimen/list_item_horizontal_spacing"
		android:textColor="@color/textColorPrimary"
		android:text="Artist"
		android:background="@drawable/list_item_background"
	/>
    
    <Button
    	android:id="@+id/SongMenuAlbum"
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_item_height"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/text_xlarge"
		android:paddingLeft="@dimen/list_item_horizontal_spacing"
		android:textColor="@color/textColorPrimary"
		android:text="Album"
		android:background="@drawable/list_item_background"
	/>
    
    
</LinearLayout >
