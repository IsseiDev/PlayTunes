<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_horizontal_spacing"
    android:paddingRight="@dimen/list_item_horizontal_spacing"
    android:gravity="center_vertical">
    
    
    <TextView android:id="@+id/TrackProgressPlayPosition"
        
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0:00"
        android:textColor="#FFFFFF"
		
	/>
    
    <SeekBar android:id="@+id/TrackProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:progressDrawable="@drawable/progress_indicator"
        android:thumb="@drawable/progress_handle"
	/>
    
    <TextView android:id="@+id/TrackProgressPlayLength"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="5:00"
        android:textColor="#FFFFFF"
        />



</LinearLayout>
