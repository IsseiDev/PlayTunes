<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/touch_target_minimum"
    android:minHeight="@dimen/touch_target_minimum"
    android:orientation="horizontal"
    android:background="@drawable/dialog_header_background">
    
    <TextView android:id="@+id/DialogHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_minimum"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_xlarge"
        android:gravity="center"
        
        />
    
    <ImageButton
        android:layout_width="@dimen/touch_target_minimum"
        android:layout_height="@dimen/touch_target_minimum"
        android:src="@drawable/abc_ic_clear"
        android:background="@drawable/button_background_dark"
        android:layout_alignParentLeft="true"
        />
	
</RelativeLayout>
