<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout android:id="@+id/Toolbar"
        android:layout_height="@dimen/footer_height"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@color/primaryAccentColor"
        android:orientation="horizontal"
        android:gravity="fill_horizontal">
        
        <ImageButton android:id="@+id/NavigationToolbarSettings"
            
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:src="@drawable/ic_action_settings"
            android:background="@drawable/button_background_dark"
            android:layout_weight="1"
            android:nextFocusRight="@+id/NavigationToolbarFeedbackButton"
            
            />
        
        <View
            
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
			
		/>
        
        <ImageButton android:id="@+id/NavigationToolbarFeedback"
            
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:src="@drawable/ic_action_monolog"
            android:background="@drawable/button_background_dark"
            android:layout_weight="1"
            android:nextFocusLeft="@id/NavigationToolbarFeedback"
        	
        />
        
     </LinearLayout>
     
     <ListView android:id="@+id/NavigationListView"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/Toolbar"
        
	/>
	
	<View
		
		android:layout_width="match_parent"
    	android:layout_height="2dp"
    	android:background="@drawable/footer_shadow"
    	android:layout_above="@id/Toolbar"
	
	/>

</RelativeLayout>
