<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/NotificationAlbumArt"
		android:layout_width="64dip"
		android:layout_height="64dip"
		android:src="@drawable/carbon"
		android:scaleType="fitXY"
	/>
	<LinearLayout
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_vertical"
	    android:layout_weight="1"
	    android:gravity="center_vertical"
	    android:orientation="vertical"
	    android:paddingLeft="8dp">
	    
    <TextView android:id="@+id/NotificationSongName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/textColorPrimaryDark"
		android:textSize="@dimen/text_large"
		android:lines="1"
	/>
    
	<TextView android:id="@+id/NotificationArtistName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/textColorSecondaryDark"
		android:lines="1"
		android:textSize="@dimen/text_medium"
	/>
	
	</LinearLayout>
	
	<ImageButton android:id="@+id/NotificationPlayPauseButton"
	    android:layout_width="48dip"
	    android:layout_height="match_parent"
	    android:src="@drawable/ic_action_playback_pause_white"
	    android:background="@drawable/button_background_dark"
	    />
	
	<ImageButton android:id="@+id/NotificationNextButton"
	    android:layout_width="48dip"
	    android:layout_height="match_parent"
	    android:src="@drawable/ic_action_playback_next_white"
	    android:background="@drawable/button_background_dark"
	    />
	<ImageButton android:id="@+id/NotificationCloseButton"
	    android:layout_width="48dip"
	    android:layout_height="match_parent"
	    android:scaleType="centerInside"
	    android:src="@drawable/abc_ic_clear"
	    
	    android:background="@drawable/button_background_dark"
	    />
</LinearLayout>