<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
	<style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		
		<!-- Support library compatibility -->
		<item name="background">@color/primaryAccentColor</item>
		
		<item name="subtitleTextStyle">@style/MyActionBarSubtitleText</item>
		
		
	</style>
	
	<style name="ActionButtonCompat" parent="@style/Widget.AppCompat.ActionButton">
	    
	    <item name="android:background">@drawable/button_background_dark</item>
	    
	</style>
	
	<style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    
	    <item name="android:textColor">@color/textColorPrimaryDark</item>
	    <!-- The textColor property is backward compatible with the Support Library -->
		
	</style>
	
	<style name="MyActionBarSubtitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
	    
	    <item name="android:textColor">@color/textColorPrimaryDark</item>
	    
	</style>
	
	<style name="BadgeNumber" parent="@android:style/Widget.TextView">
	    
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">4dp</item>
	    <item name="android:textColor">@color/textColorSecondary</item>
	    <item name="android:textSize">@dimen/text_medium</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:typeface">monospace</item>
	    
	</style>
	
	<style name="StarButton">
	    
	    <item name="android:button">@null</item>
	    <item name="android:background">@drawable/star_button_background</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">@dimen/touch_target_minimum</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textOn">@null</item>
	    <item name="android:textOff">@null</item>
		
	</style>
	
	<style name="DarkStarButton">
	    
	    <item name="android:button">@null</item>
	    <item name="android:background">@drawable/star_button_background_dark</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">@dimen/touch_target_minimum</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textOn">@null</item>
	    <item name="android:textOff">@null</item>
		
	</style>
	
	<style name="MenuButton" parent="@android:style/Widget.ImageButton">
	    
	    <item name="android:background">@drawable/button_background_light</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">@dimen/touch_target_minimum</item>
	    <item name="android:gravity">center</item>
	    <item name="android:src">@drawable/abc_ic_menu_moreoverflow_normal_holo_light</item>
	
	</style>
	
	<style name="MenuButtonDark" parent="@style/MenuButton">
	    
	    <item name="android:background">@drawable/button_background_dark</item>
	    <item name="android:src">@drawable/abc_ic_menu_moreoverflow_normal_holo_dark</item>
	
	</style>
	
	<style name="AddButtonDark" parent="@android:style/Widget.ImageButton">
	    
	    <item name="android:background">@drawable/button_background_dark</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_width">@dimen/touch_target_minimum</item>
	    <item name="android:gravity">center</item>
	    <item name="android:src">@drawable/ic_action_add_white</item>
	    
	</style>
	
<style name="CompatListView" parent="@android:style/Widget.ListView">
    	    <item name="android:divider">@drawable/list_divider</item>
	    <item name="android:dividerHeight">1dp</item>
    <item name="android:listSelector">@drawable/button_background_dark</item>
</style>

<style name="SearchField" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/textfield_activated_holo_light</item>
	  <item name="android:textColor">#FFFFFF</item>
</style>

<style name="AccentedField" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/textfield_accented</item>
	  
</style>

</resources>
